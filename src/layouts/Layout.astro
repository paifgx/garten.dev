---
import MainNavigation from "../components/layout/MainNavigation.astro";
import Footer from "../components/layout/Footer.astro";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <meta
      name="description"
      content="AI Solution Architect & Developer: Patrik Garten bietet innovative KI-Lösungen und maßgeschneiderte Softwareentwicklung. Optimieren Sie Ihre Prozesse mit nachhaltigen und skalierbaren Lösungen. Kontaktieren Sie uns jetzt!"
    />
    <meta
      name="keywords"
      content="AI Architect, AI Developer, Software Engineer, Künstliche Intelligenz, Softwareentwicklung, Digitale Transformation, KMU-Beratung, AI Lösungen, AI für KMUs, IT-Beratung, Artificial Intelligence, LLM, AI Consultant, TÜV zertifiziert, certified"
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://garten.dev/" />

    <link rel="icon" type="image/png" href="/favicon.png" />

    <title>Patrik Garten · AI Solution Architect & Software Engineer</title>

    <meta
      property="og:title"
      content="Patrik Garten | AI Solution Architect & Software Development"
    />
    <meta
      property="og:description"
      content="Entdecken Sie maßgeschneiderte KI-Lösungen und Softwareentwicklung von Patrik Garten. Optimieren Sie Ihre Prozesse mit einem erfahrenen AI Architect & Developer."
    />
    <meta property="og:url" content="https://garten.dev/" />
    <meta property="og:image" content="https://garten.dev/logo.png" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="Garten.dev" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Patrik Garten | AI Solutions & Software Development"
    />
    <meta
      name="twitter:description"
      content="Maßgeschneiderte KI-Lösungen und Softwareentwicklung für KMUs und innovative Unternehmen. Kontaktieren Sie uns für digitale Transformation."
    />
    <meta name="twitter:image" content="https://garten.dev/logo.png" />

    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Patrik Garten",
        "url": "https://garten.dev/",
        "sameAs": [
          "https://www.linkedin.com/in/patrik-garten",
          "https://twitter.com/paifgx"
        ],
        "description": "AI Solution Architect & Developer specializing in custom software solutions and artificial intelligence services.",
        "logo": "https://garten.dev/logo.png",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+49-1516-4587494",
          "contactType": "Customer Service",
          "availableLanguage": "German"
        }
      }
    </script>
  </head>
  <body class="bg-alice-blue dark:bg-woodsmoke">
    <MainNavigation />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  h1 {
    @apply text-5xl font-bold text-tiber dark:text-granny-apple;
  }

  h2 {
    @apply text-4xl font-bold text-tiber dark:text-granny-apple;
  }

  h3 {
    @apply text-3xl font-bold text-tiber dark:text-granny-apple;
  }

  h4 {
    @apply text-2xl font-bold text-tiber dark:text-granny-apple;
  }

  h5 {
    @apply text-xl font-bold text-tiber dark:text-granny-apple;
  }

  h6 {
    @apply text-lg font-bold text-tiber dark:text-granny-apple;
  }

  section {
    @apply flex flex-col justify-center bg-alice-blue px-8 py-16 text-woodsmoke dark:bg-woodsmoke dark:text-alice-blue;
  }

  .btn,
  button {
    @apply rounded px-6 py-3;
  }

  .btn-primary {
    @apply bg-tiber text-alice-blue hover:bg-tiber-900;
  }

  .btn-secondary {
    @apply bg-gray-700 text-alice-blue hover:bg-gray-800;
  }

  .btn-outline {
    @apply border border-tiber text-tiber hover:bg-tiber-900 hover:text-alice-blue dark:border-alice-blue dark:text-alice-blue;
  }

  .btn-info {
    @apply bg-amaranth text-alice-blue hover:bg-amaranth-900 hover:text-alice-blue;
  }
</style>
